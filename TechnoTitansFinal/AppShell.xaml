<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TechnoTitansFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TechnoTitansFinal.Tabs"
    xmlns:flyout="clr-namespace:TechnoTitansFinal.FlyoutControls"
    Shell.FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="TechnoTitansFinal" BackgroundColor="Black">

    <Shell.FlyoutHeader>
        <flyout:FlyoutHeader />
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <flyout:FlyoutFooter />
    </Shell.FlyoutFooter>

    <Shell.Resources>
        <Style x:Key="BaseStyle"
       TargetType="Element">
            <Setter Property="Shell.BackgroundColor"
            Value="Black" />
            <Setter Property="Shell.ForegroundColor"
            Value="White" />
            <Setter Property="Shell.TitleColor"
            Value="White" />
            <Setter Property="Shell.DisabledColor"
            Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor"
            Value="#95FFFFFF" />
        </Style>
        <Style TargetType="ShellItem"
       BasedOn="{StaticResource BaseStyle}" />
    </Shell.Resources>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="0.2*,0.8*" HeightRequest="50">

                <Image Source="{Binding FlyoutIcon}"
                   Margin="5"
                   HeightRequest="24" />
                <Label Grid.Column="1"
                   Text="{Binding Title}"
                   FontSize="16"
                   FontAttributes="None"
                   VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Dashboard" Icon="dashboard.png"
            Style="{StaticResource BaseStyle}"
    ContentTemplate="{DataTemplate local:Dashboard}"
    Route="Injuries" />

        <ShellContent
    Title="Privacy Policy"
                Icon="compliant.png"
            Style="{StaticResource BaseStyle}"
    ContentTemplate="{DataTemplate local:PrivacyPolicy}"
          
    Route="PrivacyPolicy" />

        <ShellContent
    Title="Terms And Conditions"
                Icon="tac.png"
            Style="{StaticResource BaseStyle}"
    ContentTemplate="{DataTemplate local:TACPage}"
      
    Route="TACPage" />

    </FlyoutItem>

    <TabBar>
        <Tab Title="EXPLORE"
             Icon="baseball_cap.png">

            <ShellContent
                Title="Dashboard"
                Route="Dashboard" />

        </Tab>

        <Tab>
            <ShellContent
                Title="LIBRARY"
                Icon="search.png"
                 Route="Tab1"
                            />
        </Tab>

        <Tab>
            <ShellContent
                Title="List of Providers"
                Icon="shopping_bag.png"
                Route="Tab2"
                />
        </Tab>
    </TabBar>



</Shell>
