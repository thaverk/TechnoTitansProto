<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechnoTitansFinal.Tabs.AthleteSignUp"
             xmlns:local="clr-namespace:TechnoTitansFinal.Tabs"
             x:DataType="local:AthleteSignUp"
             Title="AthleteSignUp">
    <VerticalStackLayout>
        <Label 
            Text="Tell us about yourself, Athlete"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Name" BindingContext="{Binding User.userName}" x:Name="AthleteName"/>
        <Entry Placeholder="Surname" BindingContext="{Binding User.userSurname}" x:Name="AthleteSurname" />        
        <Entry Placeholder="Gender/Sex" BindingContext="{Binding User.userGender}" x:Name="AthleteGender"/>
        <Entry Placeholder="Email" BindingContext="{Binding User.userEmail} " x:Name="AthleteEmail"/>
        <Entry Placeholder="Password" BindingContext="{Binding User.userPassword}" IsPassword="True" x:Name="AthletePassword"/>
        <Button Text="Sign Up" Clicked="SignUp_Clicked"/>
        <Button Text="Next Page" Clicked="NextPage_clicked"/>
    </VerticalStackLayout>
</ContentPage>